version: '3.7'

services:

  api-server:
    image: tagged_image_name
    restart: always
    ports:
      - 5000:5000
    environment:
      - FLASK_ENV=development
    volumes:
      - type: bind
        source: absolute_project_directory
        target: /usr/src/app
    depends_on:
      - postgres

  postgres:
    image: postgres:12.0-alpine
    volumes:
      - type: bind
        source: absolute_path_for_postgres_data
        target: /var/lib/postgresql/data
    ports:
      - 5432:5432
